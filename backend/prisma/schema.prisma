// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// CORE MODELS
// ============================================

model User {
  id              String           @id @default(uuid())
  email           String           @unique
  password        String
  username        String           @unique
  name            String
  avatar          String?
  subscription    String           @default("free")
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  portfolios      Portfolio[]
}

// ============================================
// PORTFOLIO & TEMPLATE SYSTEM
// ============================================

model Portfolio {
  id              String             @id @default(uuid())
  userId          String
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  templateId      String
  template        Template           @relation(fields: [templateId], references: [id])
  
  themeId         String?
  theme           Theme?             @relation(fields: [themeId], references: [id])
  
  name            String             @default("My Portfolio")
  slug            String?            @unique
  isPublished     Boolean            @default(false)
  
  // Resume
  resumeUrl       String?
  
  // SEO & Meta
  metaTitle       String?
  metaDescription String?
  metaImage       String?
  favicon         String?
  
  // Global Settings
  globalSettings  Json?
  customCSS       String?            @db.Text
  customJS        String?            @db.Text
  
  // Analytics
  viewCount       Int                @default(0)
  analyticsId     String?
  
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  
  sections        PortfolioSection[]
  views           PortfolioView[]
  
  @@index([userId])
  @@index([slug])
}

model Template {
  id              String             @id @default(uuid())
  name            String
  category        String
  description     String
  previewImage    String
  thumbnailImage  String?
  demoUrl         String?
  
  defaultThemeId  String?
  defaultTheme    Theme?             @relation(fields: [defaultThemeId], references: [id])
  
  config          Json?
  isActive        Boolean            @default(true)
  isPremium       Boolean            @default(false)
  
  author          String?
  version         String             @default("1.0.0")
  tags            String[]
  
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  
  portfolios      Portfolio[]
  
  @@index([category])
}

// ============================================
// SECTION SYSTEM
// ============================================

model SectionType {
  id                String              @id @default(uuid())
  name              String              @unique
  displayName       String
  description       String
  icon              String?
  category          String
  
  componentName     String
  schema            Json
  defaultData       Json?
  
  styleOptions      Json?
  layoutVariants    Json?
  
  isActive          Boolean             @default(true)
  isPremium         Boolean             @default(false)
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  portfolioSections PortfolioSection[]
}

model PortfolioSection {
  id              String      @id @default(uuid())
  portfolioId     String
  portfolio       Portfolio   @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  sectionTypeId   String
  sectionType     SectionType @relation(fields: [sectionTypeId], references: [id])
  
  order           Int
  isVisible       Boolean     @default(true)
  
  content         Json
  
  styles          Json?
  layout          String?
  animations      Json?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([portfolioId])
  @@index([portfolioId, order])
}

// ============================================
// THEME SYSTEM
// ============================================

model Theme {
  id              String      @id @default(uuid())
  name            String
  description     String?
  
  colors          Json
  fonts           Json
  fontSizes       Json
  fontWeights     Json
  lineHeights     Json
  
  spacing         Json
  borderRadius    Json
  borderWidth     Json
  shadows         Json
  animations      Json
  breakpoints     Json
  
  customCSS       String?     @db.Text
  
  category        String      @default("light")
  isDefault       Boolean     @default(false)
  isPublic        Boolean     @default(false)
  isPremium       Boolean     @default(false)
  
  usageCount      Int         @default(0)
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  portfolios      Portfolio[]
  templates       Template[]
}

// ============================================
// ANALYTICS
// ============================================

model PortfolioView {
  id              String      @id @default(uuid())
  portfolioId     String
  portfolio       Portfolio   @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  ipAddress       String?
  userAgent       String?
  country         String?
  city            String?
  device          String?
  browser         String?
  
  referrer        String?
  
  viewedAt        DateTime    @default(now())
  
  @@index([portfolioId])
  @@index([viewedAt])
}
